{
  "name": "serialport-meta",
  "private": true,
  "version": "0.0.0",
  "description": "Node.js packages to access serial ports, process data from them and speak many protocols",
  "engines": {
    "node": ">=4.0.0"
  },
  "license": "MIT",
  "scripts": {
    "rebuild": "lerna exec --scope serialport -- npm run rebuild",
    "coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
    "docs": "jsdoc -c ./.jsdoc.json ",
    "exec-test": "lerna exec node ./",
    "format": "eslint packages --fix",
    "generate": "plop",
    "lint": "eslint packages && lerna exec --scope serialport -- npm run lint",
    "postinstall": "lerna bootstrap",
    "prebuild": "lerna exec --scope serialport -- npm run prebuild",
    "publish": "lerna publish",
    "test:watch": "mocha -w",
    "test": "nyc --reporter=html --reporter=text --reporter lcovonly mocha",

    "arduino-test": "TEST_PORT=$(./bin/find-arduino.js) npm test",
    "debugger": "TEST_PORT=$(./bin/find-arduino.js) node --inspect --debug-brk test/manual-testing/performance.js",
    "changelog": "conventional-changelog -i CHANGELOG.md -s",
    "stress": "mocha --no-timeouts test/arduinoTest/stress.js",
    "valgrind": "TEST_PORT=$(./bin/find-arduino.js) valgrind --leak-check=full node test/manual-testing/memory-binding.js",
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/node-serialport/node-serialport.git"
  },
  "maintainers": [
    {
      "name": "Francis Gulotta",
      "email": "wizard@roborooter.com",
      "url": "https://www.roborooter.com"
    }
  ],
  "dependencies": {},
  "devDependencies": {
    "@reconbot/jsdoc-theme": "^1.0.3",
    "bluebird": "^3.5.0",
    "cc": "^1.0.1",
    "chai": "^4.0.2",
    "chai-subset": "^1.5.0",
    "codecov": "^3.0.4",
    "eslint": "^5.0.0",
    "eslint-plugin-import": "^2.13.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "jsdoc": "^3.5.5",
    "lerna": "^2.11.0",
    "mocha": "^5.2.0",
    "nyc": "^13.0.0",
    "plop": "^2.0.0",
    "prebuild": "^7.6.1",
    "proxyquire": "^2.0.0",
    "sinon": "^6.0.1"
  }
}
