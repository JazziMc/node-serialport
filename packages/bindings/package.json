{
  "name": "@serialport/bindings",
  "version": "1.0.0",
  "main": "lib",
  "dependencies": {
    "@serialport/binding-abstract": "^1.0.0",
    "@serialport/parser-readline": "^1.0.0",
    "bindings": "^1.3.0",
    "debug": "^3.1.0",
    "nan": "^2.9.2",
    "prebuild-install": "^4.0.0"
  },
  "devDependencies": {
    "@serialport/binding-mock": "^1.0.0"
  },
  "scripts": {
    "install": "prebuild-install || node-gyp rebuild",
    "lint": "cc --verbose",
    "prebuild": "prebuild --all --force --strip --verbose",
    "rebuild": "node-gyp rebuild"
  },
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/node-serialport/node-serialport.git"
  },
  "gypfile": true,
  "cc": {
    "filter": [
      "legal/copyright",
      "build/include"
    ],
    "files": [
      "src/*.cpp",
      "src/*.h"
    ],
    "linelength": "120"
  }
}
